@page "/"
@namespace EventHorizon.Blazor.UX.Server.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="This application shows off the EventHorizon.Blazor.UX Control Library." />
    <title>EventHorizon.Blazor.UX.Server</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.0.0/animate.min.css" />
    <link href="_content/EventHorizon.Blazor.UX/ehz-blazor-ux-theme.css" rel="stylesheet" />
    <link href="_content/EventHorizon.Blazor.UX.Shared/css/theme.css" rel="stylesheet" />
    <link href="_content/EventHorizon.Blazor.UX.Shared/css/app.css" rel="stylesheet" />
    <link href="EventHorizon.Blazor.UX.Server.styles.css" rel="stylesheet" />

    <script type="text/javascript" src="_content/EventHorizon.Blazor.UX/ehz-blazor-ux.js"></script>
    <script type="text/javascript" src="_content/BlazorTransitionableRoute/jsInterop.js"></script>
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="/" class="reload">Reload</a>
        <a href="#" class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
</body>
</html>
