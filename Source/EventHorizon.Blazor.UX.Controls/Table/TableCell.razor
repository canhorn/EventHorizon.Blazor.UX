<td class="table__cell" @attributes="Attributes">@ChildContent</td>

<style>
    .table__cell {
        padding: 5px;
        vertical-align: top;
    }
</style>

@code {
    [Parameter(CaptureUnmatchedValues = true)]
    public IDictionary<string, object> Attributes { get; set; }
    [Parameter]
    public RenderFragment ChildContent { get; set; }
}
