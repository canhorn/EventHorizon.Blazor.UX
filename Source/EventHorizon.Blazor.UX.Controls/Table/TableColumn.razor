<th class="table__column" @attributes="Attributes">@ChildContent</th>

<style>
    .table__column {
        font-weight: bold;
        padding: 5px;
        vertical-align: top;
    }
</style>

@code {
    [Parameter(CaptureUnmatchedValues = true)]
    public IDictionary<string, object> Attributes { get; set; }
    [Parameter]
    public RenderFragment ChildContent { get; set; }
}
